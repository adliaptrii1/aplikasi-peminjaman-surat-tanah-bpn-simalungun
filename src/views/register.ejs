<div class="form-container container-fluid ">
    <div class="form ms-auto me-auto mt-5 border" id="login">
        <div class="form-body ">
            <h3 class="fw-bolder">
               Register
            </h3>
            <form id="form-register" >
                <div class="form-item mb-3">
                    <label for="name" class="form-label">Nama : </label>
                    <input type="text" name="name" id="name" class="form-control" required>
                </div>
                <div class="form-item mb-3">
                    <label for="email" class="form-label">Email : </label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>

                <div class="form-item mb-3">
                    <label for="username" class="form-label">Username : </label>
                    <input type="text" name="username" id="username" class="form-control" required>
                </div>

                <div class="form-item mb-3">
                    <label for="nik" class="form-label">NIK : </label>
                    <input type="text" name="nik" id="nik" class="form-control" required>
                </div>

                <div class="form-item mb-3">
                    <label for="phone-number" class="form-label">Nomor Telepon : </label>
                    <input type="text" name="phone-number" id="phone-number" class="form-control" required>
                </div>
                
                <div class="form-item mb-3">
                    <label for="address" class="form-label">Alamat : </label>
                    <input type="text" name="address" id="address" class="form-control" required>
                </div>

                <div class="form-item mb-3">
                    <label for="password" class="form-label">Kata Sandi : </label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <div class="form-item mb-3">
                    <label for="password" class="form-label">Konfirmasi Kata Sandi : </label>
                    <input type="password" name="confirm-password" id="confirm-password" class="form-control" required>
                </div>
                
                <button type="submit" class="btn btn-success" >Register</button>
            </form>      
        </div>
   
    </div>
</div>

<script src="/js/register.js" type="module"></script>

